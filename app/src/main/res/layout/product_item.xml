<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    android:elevation="50dp"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_img_item"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/product_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BROWNIES"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/product_img_item"
            app:layout_constraintStart_toEndOf="@+id/product_img_item"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/product_price_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 40"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/product_name_item"
            app:layout_constraintStart_toEndOf="@+id/product_img_item"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/product_type_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate \nNutella "
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/product_price_item"
            app:layout_constraintStart_toEndOf="@+id/product_img_item"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/product_size_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 inch"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/product_type_item"
            app:layout_constraintStart_toEndOf="@+id/product_img_item"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

