<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    android:elevation="30dp"
    android:id="@+id/order_item_cardView">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_order_item">

        <ImageView
            android:id="@+id/order_item_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/vector_bakery_bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/order_item_prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cake Pandan"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/amaranth"
            app:layout_constraintStart_toStartOf="@+id/order_item_img"
            app:layout_constraintBottom_toBottomOf="@+id/order_item_img"
            app:layout_constraintTop_toTopOf="@+id/order_item_img"
            app:layout_constraintEnd_toEndOf="@+id/order_item_img"/>

<!--        <CheckBox-->
<!--            android:id="@+id/cb_order_item"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toTopOf="@+id/order_item_prod_name"-->
<!--            app:layout_constraintStart_toEndOf="@+id/order_item_prod_name"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/order_item_prod_name"-->
<!--            android:layout_marginStart="50dp"/>-->

        <ImageButton
            android:id="@+id/fav_order_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@+id/order_item_prod_name"
            app:layout_constraintStart_toEndOf="@+id/order_item_prod_name"
            app:layout_constraintBottom_toBottomOf="@+id/order_item_prod_name"
            android:layout_marginStart="50dp"
            android:src="@drawable/ic_fav"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/order_item_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_item_img" />

        <TextView
            android:id="@+id/order_item_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akmal"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_item_img" />

        <TextView
            android:id="@+id/order_item_phoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0192581545"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_item_img" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>