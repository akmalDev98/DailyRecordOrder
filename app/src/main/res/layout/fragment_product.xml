<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProductFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/product_box_bg"/>

    <TextView
        android:id="@+id/productHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="PRODUCT"
        android:textStyle="bold"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:background="@color/add_bg"
        android:textColor="@color/white"
        android:fontFamily="@font/amaranth"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_prod_container"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/productHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/sample_rounded_box"
        android:elevation="70dp"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/product_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/product_img"
            app:layout_constraintTop_toTopOf="@+id/product_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Price per unit"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/product_img"
            app:layout_constraintTop_toBottomOf="@+id/product_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/product_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Size"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/product_img"
            app:layout_constraintTop_toBottomOf="@+id/product_price"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/product_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="Product type"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/product_img"
            app:layout_constraintTop_toBottomOf="@+id/product_img"
            app:layout_constraintBottom_toTopOf="@+id/add_product_button"
            app:layout_constraintEnd_toStartOf="@+id/add_product_button"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/add_product_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Add"
            android:background="@drawable/custom_button_blue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sample_rounded_box"
        android:elevation="70dp"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/product_item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>