<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.AddOrderFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/sample_bottom_right_radius_20dp"/>

    <TextView
        android:id="@+id/add_order_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="ADD ORDER"
        android:textStyle="bold"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:background="@color/add_bg"
        android:textColor="@color/white"
        android:fontFamily="@font/amaranth"/>

    <ImageView
        android:id="@+id/add_order_img_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_bias="0.129"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"/>

    <!--deliverydate-->
    <TextView
        android:id="@+id/add_delivery_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_prod_name_et"
        app:layout_constraintStart_toEndOf="@id/add_order_img_id"
        android:layout_marginStart="16dp"
        android:text="Delivery date"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/add_delivery_date_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_order_img_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_order_img_id"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:inputType="date"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"/>

    <!--product-->
    <TextView
        android:id="@+id/add_prod_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/add_order_img_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />
    <EditText
        android:id="@+id/add_prod_name_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/add_prod_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/add_prod_name_tv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_input"/>

    <!--product type-->
    <TextView
        android:id="@+id/add_prod_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product type : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/add_order_img_id"
        app:layout_constraintTop_toBottomOf="@id/add_prod_name_tv"
        android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/add_prod_type_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@+id/add_prod_type_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/add_prod_type_tv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"/>

    <!--price-->
    <TextView
        android:id="@+id/add_prod_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/add_order_img_id"
        app:layout_constraintTop_toBottomOf="@id/add_prod_type_tv"
        android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/add_prod_price_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@+id/add_prod_price_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/add_prod_price_tv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"
        android:inputType="numberDecimal"/>

    <!--quantity-->
    <TextView
        android:id="@+id/add_prod_quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/add_order_img_id"
        app:layout_constraintTop_toBottomOf="@id/add_prod_price_tv"
        android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/add_prod_quantity_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@+id/add_prod_quantity_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/add_prod_quantity_tv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"
        android:inputType="number"/>

    <!--customer name-->
    <TextView
        android:id="@+id/add_cust_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer name : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/add_order_img_id"
        app:layout_constraintTop_toBottomOf="@id/add_prod_quantity_tv"
        android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/add_cust_name_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@+id/add_cust_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/add_cust_name_tv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"/>

    <!--phone no-->
    <TextView
        android:id="@+id/add_phone_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/add_order_img_id"
        app:layout_constraintTop_toBottomOf="@id/add_cust_name_tv"
        android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/add_phone_no_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@+id/add_phone_no_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/add_phone_no_tv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"
        android:inputType="phone"/>

    <!--total-->
    <TextView
        android:id="@+id/add_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total : "
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/add_order_img_id"
        app:layout_constraintTop_toBottomOf="@+id/add_phone_no_tv"
        android:layout_marginTop="70dp"/>
    <TextView
        android:id="@+id/add_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 0"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/add_total_tv"
        app:layout_constraintBottom_toBottomOf="@+id/add_total_tv"
        android:layout_marginTop="64dp"/>



    <!--buttons-->
    <Button
        android:id="@+id/add_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Cancel"
        android:background="@drawable/custom_button_blue"
        android:backgroundTint="@color/light_grey"/>
    <Button
        android:id="@+id/add_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/add_cancel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="ADD"
        android:textStyle="bold"
        android:background="@drawable/custom_button_blue"
        android:backgroundTint="@color/light_green"/>

    <Button
        android:id="@+id/add_calc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@drawable/sample_rounded_box"
        android:backgroundTint="@color/light_grey"
        android:text="Calculate"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@id/add_total_tv"
        app:layout_constraintStart_toStartOf="@id/add_total_tv" />



</androidx.constraintlayout.widget.ConstraintLayout>